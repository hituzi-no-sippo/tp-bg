{
  "extends": [
    ":ignoreModulesAndTests",
    ":semanticPrefixFixDepsChoreOthers",
    "group:monorepos",
    "group:recommended",
    "workarounds:all",
    "github>aquaproj/aqua-renovate-config#1.5.2",
    "github>aquaproj/aqua-renovate-config:file#1.5.2(^aqua/.*\\.ya?ml$)"
  ],
  "pre-commit": {
    "enabled": true
  },
  "patch": {
    "automerge": true
  },
  "platformAutomerge": true,
  "labels": [
    "dependencies"
  ],
  "rangeStrategy": "auto",
  "dependencyDashboard": true,
  "dependencyDashboardAutoclose": true,
  "dependencyDashboardLabels": [
    "dependencies",
    "automated issue"
  ],
  "semanticCommits": "enabled",
  "configMigration": true,

  "packageRules": [
    {
      "matchPaths": [
        "aqua.yaml",
        "aqua/*.yaml"
      ],
      "addLabels": [
        "aqua"
      ],
      "groupName": "aqua package",
      "minor": {
        "automerge": true
      }
    },
    {
      "matchPackagePatterns": [
        "aquaproj/aqua"
      ],
      "addLabels": [
        "aqua"
      ],
      "minor": {
        "automerge": true
      }
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "addLabels": [
        "github-actions"
      ]
    },
    {
      "matchManagers": [
        "pre-commit"
      ],
      "addLabels": [
        "pre-commit"
      ],
      "minor": {
        "automerge": true
      }
    },
    {
      "matchPackageNames": [
        "markdownlint-cli"
      ],
      "matchManagers": [
        "npm"
      ],
      "minor": {
        "automerge": true
      }
    },
    {
      "matchPackagePatterns": [
        "markdownlint-cli"
      ],
      "groupName": "markdownlint",
      "addLabels": [
        "markdown"
      ]
    }
  ]
}
